@using MudBlazor
@using PortailMetier.Domain.Dtos
@using PortailMetier.Domain.Interfaces
@inject IGedService GedService

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Rechercher un dossier</MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="_searchTerm" Label="Nom du dossier" Variant="Variant.Outlined"
            Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Search" OnAdornmentClick="SearchDossiers"
            OnKeyDown="HandleKeyDown" Immediate="true" DebounceInterval="300" Class="mb-4" />

        @if (_isLoading)
        {
            <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-4" />
        }
        else
        {
            <MudList T="DossierDto" ReadOnly="false">
                @foreach (var dossier in _searchResults)
                {
                    <MudListItem T="DossierDto" OnClick="@(() => SelectDossier(dossier))">
                        <MudText>@dossier.Nom</MudText>
                        <MudText Typo="Typo.caption">@dossier.CheminCompletUNC</MudText>
                    </MudListItem>
                }
            </MudList>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Annuler</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;

    private string _searchTerm = string.Empty;
    private List<DossierDto> _allDossiers = new();
    private List<DossierDto> _searchResults = new();
    private bool _isLoading = false;

    protected override async Task OnInitializedAsync()
    {
        _isLoading = true;
        _allDossiers = await GedService.GetArborescenceDossiersAsync(recursive: true);
        _isLoading = false;
    }

    private void SearchDossiers()
    {
        if (string.IsNullOrWhiteSpace(_searchTerm))
        {
            _searchResults.Clear();
            return;
        }

        _searchResults = _allDossiers
        .Where(d => d.Nom.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase))
        .OrderBy(d => d.Nom)
        .Take(20) // Limite les rÃ©sultats pour la performance
        .ToList();
    }

    private void HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            SearchDossiers();
        }
    }

    private void SelectDossier(DossierDto dossier)
    {
        MudDialog.Close(DialogResult.Ok(dossier));
    }

    void Cancel() => MudDialog.Cancel();
}