@inherits LayoutComponentBase

<MudThemeProvider Theme="_customTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Primary">
        <MudText Typo="Typo.h6" Class="ml-3">Portail Métier - TEST Thème</MudText>
    </MudAppBar>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
            <MudText Typo="Typo.h3">TEST - Avec thème personnalisé</MudText>
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private MudTheme _customTheme = new MudTheme()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = "#0063cc",
            Secondary = "#6e6e6e",
            Background = "#f5f5f5",
            Surface = "#ffffff",
            AppbarBackground = "#0063cc"
        },
        PaletteDark = new PaletteDark()
        {
            Primary = "#0063cc",
            Secondary = "#6e6e6e",
            Background = "#1c1c19",
            Surface = "#272720",
            AppbarBackground = "#1c1c19"
        }
    };
}
