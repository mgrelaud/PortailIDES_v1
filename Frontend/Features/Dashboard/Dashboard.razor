@page "/"

<MudText Typo="Typo.h4" Class="mb-6">Tableau de bord</MudText>

<MudGrid>
    <MudItem xs="12" sm="6" md="4">
        <MudCard Elevation="2" Class="pa-4" Style="height:100%">
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudAvatar Color="Color.Primary">
                        <MudIcon Icon="@Icons.Material.Filled.Engineering" />
                    </MudAvatar>
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Ingénierie</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText>Accédez aux outils de calcul de normes, bibliothèques et logiciels métier.</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Primary" Href="/ingenierie">Ouvrir</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>

    <MudItem xs="12" sm="6" md="4">
        <MudCard Elevation="2" Class="pa-4" Style="height:100%">
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudAvatar Color="Color.Info">
                        <MudIcon Icon="@Icons.Material.Filled.Business" />
                    </MudAvatar>
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">BeOrg (Gestion)</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText>Gérez vos documents, dossiers, mails et l'agenda (GED/CRM).</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Text" Color="Color.Primary" Href="/beorg">Ouvrir</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
</MudGrid>