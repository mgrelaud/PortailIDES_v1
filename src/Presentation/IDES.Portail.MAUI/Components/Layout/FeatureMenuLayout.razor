@* /Components/Layout/FeatureMenuLayout.razor *@
@layout MainLayout
@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Sections

<MudAppBar Elevation="1">
    <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@DrawerToggle" />
    <MudText Typo="Typo.h6" Class="ml-3">
        <SectionOutlet SectionName="FeatureTitle" />
    </MudText>
</MudAppBar>
<MudDrawer @bind-Open="_drawerOpen" Elevation="1" Variant="@DrawerVariant.Persistent">
    <MudDrawerHeader>
        <MudText Typo="Typo.h6">Navigation</MudText>
    </MudDrawerHeader>
    @* Le contenu du menu spécifique sera injecté ici *@
    <SectionOutlet SectionName="FeatureMenu" />
</MudDrawer>
<MudMainContent>
    <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="pa-4">
        @* Le contenu de la page (ex: la grille du métré) sera injecté ici *@
        @Body
    </MudContainer>
</MudMainContent>

@code {
    private bool _drawerOpen = true;

    private void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}