@inherits LayoutComponentBase
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<MudThemeProvider Theme="_customTheme" />
<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />

<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Primary">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@DrawerToggle" />
        @if (IsBackButtonVisible())
        {
            <MudIconButton Icon="@Icons.Material.Filled.ArrowBack" Color="Color.Inherit" OnClick="@GoBack" />
        }
        <MudText Typo="Typo.h6" Class="ml-3">Portail MÃ©tier</MudText>
        <MudSpacer />
        <Auth />
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Menu</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>

    <MudMainContent Class="d-flex flex-column" Style="height: 100vh; overflow: hidden;">
        <MudContainer MaxWidth="MaxWidth.False" Class="flex-grow-1 pa-4" Style="height: 100%; overflow-y: auto;">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;

    private MudTheme _customTheme = new MudTheme()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = "#0063cc",
            Secondary = "#6e6e6e",
            Background = "#f5f5f5",
            Surface = "#ffffff",
            AppbarBackground = "#0063cc"
        },
        PaletteDark = new PaletteDark()
        {
            Primary = "#0063cc",
            Secondary = "#6e6e6e",
            Background = "#1c1c19",
            Surface = "#272720",
            AppbarBackground = "#1c1c19"
        }
    };

    private async Task GoBack()
    {
        await JSRuntime.InvokeVoidAsync("history.back");
    }

    private bool IsBackButtonVisible()
    {
        return NavigationManager.Uri != NavigationManager.BaseUri;
    }

    private void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
