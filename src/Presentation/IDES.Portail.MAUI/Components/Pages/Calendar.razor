@page "/calendar"
@using Microsoft.Graph.Models
@using IDES.Portail.MAUI.Services
@inject GraphService GraphService
@inject NavigationManager NavigationManager

<MudText Typo="Typo.h4" Class="mb-4">Mon Calendrier</MudText>

@if (!_isAuthenticated)
{
    <MudAlert Severity="Severity.Warning">
        Veuillez vous connecter pour voir votre calendrier.
        <MudButton Link="/" Variant="Variant.Text" Color="Color.Primary">Aller à l'accueil</MudButton>
    </MudAlert>
}
else if (_isLoading)
{
    <div class="d-flex justify-center pa-10">
        <MudProgressCircular Color="Color.Primary" Indeterminate="true" Size="Size.Large" />
        <MudText VerticalAlign="VerticalAlign.Middle" Class="ml-4">Chargement des événements...</MudText>
    </div>
}
else
{
    <MudTable Items="@_events" Hover="true" Breakpoint="Breakpoint.Sm" Elevation="2">
        <HeaderContent>
            <MudTh>Sujet</MudTh>
            <MudTh>Début</MudTh>
            <MudTh>Fin</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Sujet"><b>@context.Subject</b></MudTd>
            <MudTd DataLabel="Début">@FormatDate(context.Start?.DateTime)</MudTd>
            <MudTd DataLabel="Fin">@FormatDate(context.End?.DateTime)</MudTd>
        </RowTemplate>
        <NoRecordsContent>
            <MudText>Aucun événement trouvé pour cette semaine.</MudText>
        </NoRecordsContent>
    </MudTable>
}

@code {
    private bool _isLoading = true;
    private bool _isAuthenticated = false;
    private List<Event> _events = new();

    protected override async Task OnInitializedAsync()
    {
        _isAuthenticated = GraphService.IsAuthenticated;
        
        if (_isAuthenticated)
        {
            await LoadCalendarEvents();
        }
        else
        {
            _isLoading = false;
        }
    }

    private async Task LoadCalendarEvents()
    {
        _isLoading = true;
        try
        {
            var result = await GraphService.GetMyEventsForWeekAsync(DateTime.Today);
            _events = result.ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading events: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
        }
    }

    private string FormatDate(string? dateTimeStr)
    {
        if (string.IsNullOrEmpty(dateTimeStr)) return "-";
        if (DateTime.TryParse(dateTimeStr, out var dt))
        {
            return dt.ToLocalTime().ToString("dd/MM/yyyy HH:mm");
        }
        return dateTimeStr;
    }
}
